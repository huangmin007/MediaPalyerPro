<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d" Name="_window"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Viewbox Stretch="Uniform" ClipToBounds="True" Focusable="False">
        <Grid Name="RootGroup" Focusable="False">
            <Grid>
                <Image Name="Image_Test" />
                <Canvas Width="{Binding Width, ElementName=_window}" Height="{Binding Height, ElementName=_window}">
                    <Button Name="Button_Close" Content="Close" Width="100" Height="40" Canvas.Left="626" Canvas.Top="243" Click="Button_Click"/>
                    <Button Name="Button_Connect" Content="Connect" Width="100" Height="40" Canvas.Left="400" Canvas.Top="243" Click="Button_Click"/>
                    <Button Name="Button_Write" Content="Write" Width="100" Height="40" Canvas.Left="300" Canvas.Top="243" Click="Button_Click"/>
                </Canvas>
            </Grid>
        </Grid>

    </Viewbox>
</Window>
